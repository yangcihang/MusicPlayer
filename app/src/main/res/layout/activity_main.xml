<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/frame_home"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/layout_bottom">
        </FrameLayout>

        <com.example.yang.musicplayer.widget.MainBottomPlayer
            android:id="@+id/layout_bottom"
            android:layout_width="match_parent"
            android:layout_height="@dimen/bottom_layout_height"
            android:layout_alignParentBottom="true">
        </com.example.yang.musicplayer.widget.MainBottomPlayer>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="180dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/menu"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/menu_item_top"
            android:layout_marginTop="5dp"
            android:background="@color/menu_title"
            android:gravity="center"
            android:text="@string/app_name"
            android:textColor="@color/ternary_text"
            android:textSize="24sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/menu_item_top"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="@string/text_menu_scan_music"
            android:textColor="@color/ternary_text"
            android:textSize="@dimen/menu_item_text_size"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/menu_item_top"
            android:gravity="center"
            android:text="@string/text_menu_play_mode"
            android:textColor="@color/ternary_text"
            android:textSize="@dimen/menu_item_text_size"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/menu_item_top"
            android:gravity="center"
            android:text="@string/text_menu_background"
            android:textColor="@color/ternary_text"
            android:textSize="@dimen/menu_item_text_size"/>

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/menu_item_top"
            android:gravity="center"
            android:text="@string/text_menu_sleep"
            android:textColor="@color/ternary_text"
            android:textSize="@dimen/menu_item_text_size"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/menu_item_top"
            android:gravity="center"
            android:text="@string/text_menu_setting"
            android:textColor="@color/ternary_text"
            android:textSize="@dimen/menu_item_text_size"/>

        <TextView
            android:id="@+id/txt_exit_app"
            android:layout_width="match_parent"
            android:layout_height="@dimen/menu_item_top"
            android:gravity="center"
            android:text="@string/text_menu_exit"
            android:textColor="@color/ternary_text"
            android:textSize="@dimen/menu_item_text_size"/>
    </LinearLayout>


</android.support.v4.widget.DrawerLayout>
